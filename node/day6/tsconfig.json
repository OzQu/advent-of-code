// tsconfig.json
{
    "include": ["./*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./out",
        "rootDir": "/",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowJs": false,
        "types": ["node", "jest"]
    }
}
